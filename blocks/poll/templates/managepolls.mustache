{{!
    @template block_poll/managepolls

    This template renders the poll management tab for the poll block.

    Example context (json):
    {
        "baseurl": "http://localhost/blocks/poll/tabs.php",
        "courseid": 2,
        "rows": [
            {
                "id": 1,
                "title": "Poll 1",
                "optioncount": 6,
                "responsecount": "15",
                "locked": false,
                "urldelete": "",
                "urledit": "",
                "urllock": "",
                "urlpreview": ""
            },
            {
                "id": 2,
                "title": "Poll 2",
                "optioncount": 4,
                "responsecount": "63",
                "locked": true,
                "urldelete": "",
                "urledit": "",
                "urllock": "",
                "urlpreview": ""
            }
        ]
    }
}}

<table class="generaltable boxalignleft">
    <thead>
    <tr>
        <th class="header c0" style="text-align:left;" scope="col">{{#str}} editpollname, block_poll {{/str}}</th>
        <th class="header c1" style="text-align:right;" scope="col">{{#str}} editpolloptions, block_poll {{/str}}</th>
        <th class="header c2" style="text-align:right;" scope="col">{{#str}} responses, block_poll {{/str}}</th>
        <th class="header c3 lastcol" style="text-align:left;" scope="col">{{#str}} action {{/str}}</th>
    </tr>
    </thead>
    <tbody>
    {{#rows}}
        <tr>
            <td class="cell c0" style="text-align:left;">{{title}}</td>
            <td class="cell c1" style="text-align:right;">{{optioncount}}</td>
            <td class="cell c2" style="text-align:right;">{{responsecount}}</td>
            <td class="cell c3 lastcol" style="text-align:left;">
                {{< block_poll/actionicons }}
                    {{$preview}} x {{/ preview}}
                {{/ block_poll/actionicons }}
            </td>
        </tr>
    {{/rows}}
    </tbody>
</table>